<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container_credit_card"
    android:layout_width="match_parent"
    android:background="@drawable/bg_credit_card"
    android:elevation="10dp"
    android:layout_height="220dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/info_image_credit_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/text_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:text="Card number"
            android:textColor="@color/armenia_blue"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="48dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/info_card_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/text_valid_thru"
                android:layout_width="70dp"
                android:layout_height="34dp"
                android:layout_marginStart="50dp"
                android:gravity="center"
                android:text=" VALID\n THRU"
                android:textColor="@color/armenia_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="month"
                android:textColor="@color/armenia_blue"
                app:layout_constraintBottom_toTopOf="@+id/info_valid_month"
                app:layout_constraintEnd_toEndOf="@+id/info_valid_month"
                app:layout_constraintStart_toStartOf="@+id/info_valid_month" />

            <TextView
                android:id="@+id/info_valid_month"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_valid_thru" />

            <TextView
                android:id="@+id/text_split"
                android:layout_width="20dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/armenia_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/info_valid_month" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="year"
                android:textColor="@color/armenia_blue"
                app:layout_constraintBottom_toTopOf="@+id/info_valid_year"
                app:layout_constraintEnd_toEndOf="@+id/info_valid_year"
                app:layout_constraintStart_toStartOf="@+id/info_valid_year" />

            <TextView
                android:id="@+id/info_valid_year"
                android:layout_width="60dp"
                android:layout_height="34dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_split" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/text_cardholder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardholder name"
            android:textColor="@color/armenia_blue"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/info_cardholder_name"
            app:layout_constraintStart_toStartOf="@+id/info_cardholder_name" />

        <TextView
            android:id="@+id/info_cardholder_name"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

